@page "/"
@inject IProductService ProductService
@inject ICartService CartService
@inject IAuthService AuthService

<div style="display: flex; gap: 24px; height: calc(100vh - 48px);">
    <!-- Main Content -->
    <div style="flex: 1; display: flex; flex-direction: column;">
        <!-- Header -->
        <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-4">
                <div style="width: 44px; height: 44px; background: var(--color-accent); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                    üõí
                </div>
                <div>
                    <h1 style="font-size: 22px; font-weight: bold;">SmartKasir POS</h1>
                    <p class="text-muted" style="font-size: 12px;">Dashboard - @AuthService.CurrentUser?.Role</p>
                </div>
            </div>

            @if (AuthService.CurrentUser?.Role == "Admin")
            {
                <button class="btn btn-primary" @onclick="ShowAddProductDialog">
                    + Tambah Produk
                </button>
            }
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
            <span class="icon">üîç</span>
            <input type="text" placeholder="Cari produk..." @bind="searchQuery" @bind:event="oninput" @onkeyup="SearchProducts" />
            <button class="btn btn-primary" @onclick="SearchProducts">Cari</button>
            <button class="btn btn-secondary" @onclick="LoadProducts">‚Üª Refresh</button>
        </div>

        <!-- Product Grid -->
        <div class="card" style="flex: 1; overflow: hidden;">
            <div class="card-header">
                <span class="card-title">Produk Tersedia</span>
                <span class="text-muted">(@filteredProducts.Count)</span>
            </div>

            @if (isLoading)
            {
                <div class="empty-state">
                    <div class="empty-state-title">Memuat produk...</div>
                </div>
            }
            else if (!filteredProducts.Any())
            {
                <div class="empty-state">
                    <div class="empty-state-icon">üì¶</div>
                    <div class="empty-state-title">Belum ada produk</div>
                    <div class="empty-state-hint">
                        @if (AuthService.CurrentUser?.Role == "Admin")
                        {
                            <span>Klik 'Tambah Produk' untuk menambahkan</span>
                        }
                        else
                        {
                            <span>Hubungi admin untuk menambahkan produk</span>
                        }
                    </div>
                </div>
            }
            else
            {
                <div style="overflow-y: auto; height: calc(100% - 50px);">
                    <div class="product-grid">
                        @foreach (var product in filteredProducts)
                        {
                            <div class="product-card" @onclick="() => AddToCart(product)">
                                <div class="product-icon">üì¶</div>
                                <div class="product-name">@product.Name</div>
                                <div class="product-barcode">@product.Barcode</div>
                                <div class="product-price">Rp @product.Price.ToString("N0")</div>
                                <div class="product-stock">Stok: @product.StockQty</div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Cart Sidebar -->
    <Cart />
</div>

<!-- Add Product Dialog -->
@if (showAddDialog)
{
    <div class="modal-overlay" @onclick="CloseDialog">
        <div class="modal" @onclick:stopPropagation="true">
            <h3 class="modal-title">+ Tambah Produk Baru</h3>

            <div class="form-group">
                <label class="form-label">Barcode</label>
                <input type="text" class="form-input" @bind="newProduct.Barcode" />
            </div>

            <div class="form-group">
                <label class="form-label">Nama Produk</label>
                <input type="text" class="form-input" @bind="newProduct.Name" />
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                <div class="form-group">
                    <label class="form-label">Harga (Rp)</label>
                    <input type="number" class="form-input" @bind="newProduct.Price" />
                </div>
                <div class="form-group">
                    <label class="form-label">Stok</label>
                    <input type="number" class="form-input" @bind="newProduct.StockQty" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(dialogError))
            {
                <div class="login-error">@dialogError</div>
            }

            <div class="modal-actions">
                <button class="btn btn-secondary" @onclick="CloseDialog">Batal</button>
                <button class="btn btn-primary" @onclick="SaveProduct">üíæ Simpan</button>
            </div>
        </div>
    </div>
}

@code {
    private List<ProductDto> products = new();
    private List<ProductDto> filteredProducts = new();
    private string searchQuery = "";
    private bool isLoading = true;
    private bool showAddDialog;
    private ProductDto newProduct = new();
    private string? dialogError;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        isLoading = true;
        try
        {
            products = await ProductService.GetProductsAsync();
            filteredProducts = products;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading products: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SearchProducts()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredProducts = products;
        }
        else
        {
            filteredProducts = products
                .Where(p => p.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                           p.Barcode.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void AddToCart(ProductDto product)
    {
        CartService.AddItem(product);
    }

    private void ShowAddProductDialog()
    {
        newProduct = new ProductDto();
        dialogError = null;
        showAddDialog = true;
    }

    private void CloseDialog()
    {
        showAddDialog = false;
    }

    private async Task SaveProduct()
    {
        if (string.IsNullOrWhiteSpace(newProduct.Name) || string.IsNullOrWhiteSpace(newProduct.Barcode))
        {
            dialogError = "Nama dan Barcode harus diisi";
            return;
        }

        try
        {
            await ProductService.CreateProductAsync(newProduct);
            await LoadProducts();
            CloseDialog();
        }
        catch (Exception ex)
        {
            dialogError = ex.Message;
        }
    }
}
