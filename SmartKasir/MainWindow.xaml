<Window x:Class="SmartKasir.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SmartKasir POS"
        Height="768"
        Width="1366"
        MinHeight="600"
        MinWidth="1024"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#1a1a1a">
    
    <Grid>
        <!-- Main Content Area -->
        <ContentControl x:Name="MainContent"/>
        
        <!-- Login Overlay -->
        <Grid x:Name="LoginOverlay" Background="#1a1a1a">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <!-- Header -->
                <TextBlock Text="SmartKasir POS" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="#3b82f6"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Sistem Point of Sale Modern" 
                           FontSize="14" 
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Login Card -->
                <Border Background="#2a2a2a" CornerRadius="8" Padding="32">
                    <StackPanel>
                        <TextBlock Text="Login" 
                                   FontSize="24" 
                                   FontWeight="Medium"
                                   Foreground="White"
                                   Margin="0,0,0,24"/>

                        <!-- Username -->
                        <TextBlock Text="Username" Foreground="#aaaaaa" Margin="0,0,0,8"/>
                        <TextBox x:Name="UsernameTextBox"
                                 Background="#333333"
                                 Foreground="White"
                                 BorderBrush="#444444"
                                 Padding="12,10"
                                 FontSize="14"
                                 Margin="0,0,0,16"/>

                        <!-- Password -->
                        <TextBlock Text="Password" Foreground="#aaaaaa" Margin="0,0,0,8"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderBrush="#444444"
                                     Padding="12,10"
                                     FontSize="14"
                                     Margin="0,0,0,16"/>

                        <!-- Error Message -->
                        <TextBlock x:Name="ErrorMessageBlock"
                                   Foreground="#ef4444"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"
                                   Visibility="Collapsed"/>

                        <!-- Login Button -->
                        <Button x:Name="LoginButton"
                                Content="LOGIN"
                                Background="#3b82f6"
                                Foreground="White"
                                Height="45"
                                FontSize="14"
                                FontWeight="Medium"
                                Click="LoginButton_Click"
                                Cursor="Hand"
                                Margin="0,8,0,0"/>

                        <!-- Loading Indicator -->
                        <ProgressBar x:Name="LoadingIndicator"
                                     IsIndeterminate="True"
                                     Height="4"
                                     Visibility="Collapsed"
                                     Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <TextBlock Text="© 2024 SmartKasir - All Rights Reserved" 
                           FontSize="12" 
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
