<Window x:Class="SmartKasir.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SmartKasir POS"
        Height="768"
        Width="1366"
        MinHeight="600"
        MinWidth="1024"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#09090b">
    
    <Window.Resources>
        <!-- Animated Gradient Background -->
        <Storyboard x:Key="GradientAnimation" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="GradientStop1" 
                            Storyboard.TargetProperty="Color"
                            From="#3b82f6" To="#8b5cf6" Duration="0:0:4" AutoReverse="True"/>
            <ColorAnimation Storyboard.TargetName="GradientStop2" 
                            Storyboard.TargetProperty="Color"
                            From="#8b5cf6" To="#06b6d4" Duration="0:0:4" AutoReverse="True"/>
        </Storyboard>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#18181b"/>
            <Setter Property="Foreground" Value="#fafafa"/>
            <Setter Property="BorderBrush" Value="#27272a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="CaretBrush" Value="#fafafa"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3f3f46"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                <Setter TargetName="border" Property="Background" Value="#1f1f23"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#18181b"/>
            <Setter Property="Foreground" Value="#fafafa"/>
            <Setter Property="BorderBrush" Value="#27272a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="CaretBrush" Value="#fafafa"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3f3f46"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3b82f6"/>
                                <Setter TargetName="border" Property="Background" Value="#1f1f23"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3b82f6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#3b82f6" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563eb"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#3b82f6" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1d4ed8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#27272a"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                                <Setter Property="Foreground" Value="#71717a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource GradientAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
    
    <Grid>
        <!-- Main Content Area -->
        <ContentControl x:Name="MainContent"/>
        
        <!-- Login Overlay -->
        <Grid x:Name="LoginOverlay">
            <!-- Animated Background -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="GradientStop1" Color="#3b82f6" Offset="0"/>
                    <GradientStop x:Name="GradientStop2" Color="#8b5cf6" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <!-- Dark Overlay with Pattern -->
            <Grid Background="#09090b" Opacity="0.95"/>
            
            <!-- Decorative Elements -->
            <Canvas>
                <!-- Top Right Glow -->
                <Ellipse Width="600" Height="600" Canvas.Right="-200" Canvas.Top="-200">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#3b82f6" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.OpacityMask>
                        <RadialGradientBrush>
                            <GradientStop Color="#33000000" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.OpacityMask>
                </Ellipse>
                
                <!-- Bottom Left Glow -->
                <Ellipse Width="500" Height="500" Canvas.Left="-150" Canvas.Bottom="-150">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#8b5cf6" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.OpacityMask>
                        <RadialGradientBrush>
                            <GradientStop Color="#22000000" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.OpacityMask>
                </Ellipse>
            </Canvas>
            
            <!-- Main Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Side - Branding -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="60">
                    <!-- Logo Icon -->
                    <Border Width="80" Height="80" CornerRadius="20" Margin="0,0,0,32">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#3b82f6" Offset="0"/>
                                <GradientStop Color="#8b5cf6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="SK" FontSize="32" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock FontSize="42" FontWeight="Bold" Foreground="#fafafa" Margin="0,0,0,12">
                        <Run Text="Smart"/><Run Text="Kasir" Foreground="#3b82f6"/>
                    </TextBlock>
                    
                    <TextBlock Text="Sistem Point of Sale Modern" 
                               FontSize="18" 
                               Foreground="#71717a"
                               Margin="0,0,0,40"/>
                    
                    <!-- Features List -->
                    <StackPanel Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="32" Height="32" CornerRadius="8" Background="#18181b" Margin="0,0,16,0">
                                <TextBlock Text="✓" Foreground="#22c55e" FontSize="16" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Transaksi cepat &amp; akurat" Foreground="#a1a1aa" FontSize="15" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="32" Height="32" CornerRadius="8" Background="#18181b" Margin="0,0,16,0">
                                <TextBlock Text="✓" Foreground="#22c55e" FontSize="16" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Laporan real-time" Foreground="#a1a1aa" FontSize="15" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="32" Height="32" CornerRadius="8" Background="#18181b" Margin="0,0,16,0">
                                <TextBlock Text="✓" Foreground="#22c55e" FontSize="16" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Mode offline tersedia" Foreground="#a1a1aa" FontSize="15" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Divider -->
                <Border Grid.Column="1" Width="1" Background="#27272a" Margin="0,100"/>
                
                <!-- Right Side - Login Form -->
                <Grid Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border Background="#0f0f11" 
                            CornerRadius="24" 
                            Padding="48"
                            Width="420"
                            BorderBrush="#27272a"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="0" Opacity="0.5"/>
                        </Border.Effect>
                        
                        <StackPanel>
                            <!-- Header -->
                            <TextBlock Text="Selamat Datang" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="#fafafa"
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock Text="Masuk ke akun Anda untuk melanjutkan" 
                                       FontSize="14" 
                                       Foreground="#71717a"
                                       Margin="0,0,0,32"/>

                            <!-- Username Field -->
                            <TextBlock Text="Username" 
                                       Foreground="#a1a1aa" 
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Margin="0,0,0,10"/>
                            <TextBox x:Name="UsernameTextBox"
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Margin="0,0,0,20"/>

                            <!-- Password Field -->
                            <TextBlock Text="Password" 
                                       Foreground="#a1a1aa" 
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Margin="0,0,0,10"/>
                            <PasswordBox x:Name="PasswordBox"
                                         Style="{StaticResource ModernPasswordBoxStyle}"
                                         Margin="0,0,0,24"/>

                            <!-- Error Message -->
                            <Border x:Name="ErrorBorder"
                                    Background="#7f1d1d"
                                    CornerRadius="10"
                                    Padding="14"
                                    Margin="0,0,0,20"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="ErrorMessageBlock"
                                           Foreground="#fecaca"
                                           TextWrapping="Wrap"
                                           FontSize="13"/>
                            </Border>

                            <!-- Login Button -->
                            <Button x:Name="LoginButton"
                                    Content="Masuk"
                                    Style="{StaticResource ModernPrimaryButtonStyle}"
                                    Height="52"
                                    Click="LoginButton_Click"
                                    Margin="0,8,0,0"/>

                            <!-- Loading Indicator -->
                            <ProgressBar x:Name="LoadingIndicator"
                                         IsIndeterminate="True"
                                         Height="3"
                                         Background="#27272a"
                                         Foreground="#3b82f6"
                                         Visibility="Collapsed"
                                         Margin="0,20,0,0"/>
                            
                            <!-- Demo Credentials -->
                            <Border Background="#18181b" CornerRadius="10" Padding="14" Margin="0,24,0,0">
                                <StackPanel>
                                    <TextBlock Text="Demo Credentials" Foreground="#71717a" FontSize="12" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <TextBlock Foreground="#a1a1aa" FontSize="12">
                                        <Run Text="Admin:" FontWeight="SemiBold"/> <Run Text="admin / admin"/>
                                    </TextBlock>
                                    <TextBlock Foreground="#a1a1aa" FontSize="12">
                                        <Run Text="Kasir:" FontWeight="SemiBold"/> <Run Text="kasir / kasir"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- Footer -->
            <TextBlock Text="© 2024 SmartKasir - All Rights Reserved" 
                       FontSize="12" 
                       Foreground="#52525b"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,24"/>
        </Grid>
    </Grid>
</Window>
