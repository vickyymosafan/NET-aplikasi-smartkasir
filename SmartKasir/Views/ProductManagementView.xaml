<Window x:Class="SmartKasir.Client.Views.ProductManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manajemen Produk" Height="700" Width="1000"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Manajemen Produk" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource ForegroundBrush}"
                   Margin="0,0,0,20"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="+ Tambah Produk" 
                    Command="{Binding ShowCreateFormCommand}"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Edit" 
                    Command="{Binding ShowEditFormCommand}"
                    IsEnabled="{Binding SelectedProduct, Converter={StaticResource NullToBoolConverter}}"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Nonaktifkan" 
                    Command="{Binding DeactivateProductCommand}"
                    IsEnabled="{Binding SelectedProduct, Converter={StaticResource NullToBoolConverter}}"
                    Style="{DynamicResource DangerButtonStyle}"/>
        </StackPanel>

        <!-- Product DataGrid -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Background="{DynamicResource CardBackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="120"/>
                <DataGridTextColumn Header="Nama Produk" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Harga" Binding="{Binding Price, StringFormat=Rp {0:N0}}" Width="120"/>
                <DataGridTextColumn Header="Stok" Binding="{Binding StockQty}" Width="80"/>
                <DataGridTextColumn Header="Kategori" Binding="{Binding CategoryName}" Width="120"/>
                <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding IsActive}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Pagination -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="&lt; Sebelumnya" 
                    Command="{Binding PreviousPageCommand}"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource ForegroundBrush}">
                <Run Text="Halaman "/>
                <Run Text="{Binding CurrentPage}"/>
                <Run Text=" dari "/>
                <Run Text="{Binding TotalPages}"/>
            </TextBlock>
            <Button Content="Selanjutnya &gt;" 
                    Command="{Binding NextPageCommand}"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Memuat..." 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White" FontSize="18"/>
        </Border>

        <!-- Form Popup -->
        <Border Grid.RowSpan="4" 
                Background="#80000000" 
                Visibility="{Binding ShowForm, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="20"
                    Width="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="{Binding IsEditing, Converter={StaticResource EditModeToTitleConverter}}" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Barcode" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FormBarcode, UpdateSourceTrigger=PropertyChanged}" 
                             IsEnabled="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Nama Produk" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FormName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Harga" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FormPrice, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Stok" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FormStockQty, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <TextBlock Text="Kategori" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Categories}" 
                              SelectedValue="{Binding FormCategoryId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,10"/>

                    <CheckBox Content="Aktif" 
                              IsChecked="{Binding FormIsActive}" 
                              Foreground="{DynamicResource ForegroundBrush}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               TextWrapping="Wrap"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Batal" 
                                Command="{Binding CancelFormCommand}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Simpan" 
                                Command="{Binding SaveProductCommand}"
                                Style="{DynamicResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
