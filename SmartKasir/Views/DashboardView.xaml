<Window x:Class="SmartKasir.Client.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SmartKasir - Dashboard"
        Height="768"
        Width="1024"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="0" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="Produk" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox x:Name="SearchBox" Width="200" Margin="16,0,0,0" Padding="8"/>
                <Button Content="Cari" Margin="8,0,0,0" Padding="16,8"/>
            </StackPanel>

            <!-- Product Grid -->
            <ItemsControl Grid.Row="1" x:Name="ProductGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>

        <!-- Cart Sidebar -->
        <Border Grid.Column="1" Background="{DynamicResource MaterialDesignCardBackground}" Margin="0,0,16,16">
            <StackPanel Margin="16">
                <TextBlock Text="Keranjang" FontSize="16" FontWeight="Bold" Margin="0,0,0,16"/>
                <ItemsControl x:Name="CartItems" Height="400"/>
                <Separator Margin="0,16"/>
                <StackPanel>
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Subtotal:" Grid.Column="0"/>
                        <TextBlock x:Name="SubtotalText" Grid.Column="1" Text="Rp 0"/>
                    </Grid>
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Pajak (10%):" Grid.Column="0"/>
                        <TextBlock x:Name="TaxText" Grid.Column="1" Text="Rp 0"/>
                    </Grid>
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Total:" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
                        <TextBlock x:Name="TotalText" Grid.Column="1" Text="Rp 0" FontWeight="Bold" FontSize="14"/>
                    </Grid>
                </StackPanel>
                <Button Content="Checkout" Height="40" Margin="0,16,0,0" Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White"/>
                <Button Content="Bersihkan" Height="40" Margin="0,8,0,0"/>
                <Button Content="Logout" Height="40" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
