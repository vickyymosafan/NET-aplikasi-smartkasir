<UserControl x:Class="SmartKasir.Client.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1a1a1a">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1a1a1a"/>
        <SolidColorBrush x:Key="CardBrush" Color="#2a2a2a"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#252525"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#a0a0a0"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#666666"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3b82f6"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#2563eb"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#22c55e"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#ef4444"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3a3a3a"/>
        <SolidColorBrush x:Key="InputBrush" Color="#333333"/>
        
        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="0" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ›’" FontSize="28" VerticalAlignment="Center" Margin="0,0,12,0" Foreground="{StaticResource AccentBrush}"/>
                    <StackPanel>
                        <TextBlock Text="SmartKasir POS" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Dashboard Kasir" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource SuccessBrush}" CornerRadius="4" Padding="8,4" Margin="0,0,12,0">
                        <TextBlock Text="â— Online" Foreground="White" FontSize="12"/>
                    </Border>
                    <TextBlock Text="Admin" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center"
                               FontSize="14"/>
                </StackPanel>
            </Grid>

            <!-- Search Bar -->
            <Border Grid.Row="1" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="ðŸ”" 
                               FontSize="18" 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,12,0"/>
                    
                    <TextBox x:Name="SearchBox" 
                             Grid.Column="1"
                             Background="Transparent"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderThickness="0"
                             FontSize="14"
                             VerticalAlignment="Center"
                             Text="Cari produk atau scan barcode..."/>
                    
                    <Button Grid.Column="2" 
                            Content="Cari" 
                            Style="{StaticResource PrimaryButton}"
                            Margin="12,0,0,0"/>
                </Grid>
            </Border>

            <!-- Product Grid Area -->
            <Border Grid.Row="2" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Produk Tersedia" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,16"/>
                    
                    <!-- Product Grid Placeholder -->
                    <Border Grid.Row="1" 
                            Background="#222222" 
                            CornerRadius="6" 
                            MinHeight="300">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“¦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="Belum ada produk" 
                                       FontSize="16" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Tambahkan produk atau cari dengan barcode" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMutedBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Cart Sidebar -->
        <Border Grid.Column="1" Background="{StaticResource SidebarBrush}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Cart Header -->
                <Border Grid.Row="0" Background="#2a2a2a" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ›’" FontSize="18" Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Keranjang Belanja" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock Text="0 item" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Cart Items -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,16">
                    <StackPanel>
                        <!-- Empty Cart Message -->
                        <Border Background="#2a2a2a" CornerRadius="8" Padding="24" Margin="0,0,0,16">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ›’" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,8" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="Keranjang kosong" 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Pilih produk untuk memulai" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMutedBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Cart Footer / Checkout -->
                <Border Grid.Row="2" Background="#2a2a2a" Padding="20">
                    <StackPanel>
                        <!-- Totals -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Subtotal" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="14"/>
                            <TextBlock x:Name="SubtotalText" 
                                       Grid.Column="1" 
                                       Text="Rp 0" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="14"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Pajak (10%)" 
                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                       FontSize="14"/>
                            <TextBlock x:Name="TaxText" 
                                       Grid.Column="1" 
                                       Text="Rp 0" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="14"/>
                        </Grid>
                        
                        <Border BorderBrush="{StaticResource BorderBrush}" 
                                BorderThickness="0,1,0,0" 
                                Margin="0,8,0,12" 
                                Padding="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Total" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           FontSize="18" 
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="TotalText" 
                                           Grid.Column="1" 
                                           Text="Rp 0" 
                                           Foreground="{StaticResource AccentBrush}"
                                           FontSize="18"
                                           FontWeight="Bold"/>
                            </Grid>
                        </Border>
                        
                        <!-- Action Buttons -->
                        <Button Content="ðŸ’³ Checkout" 
                                Style="{StaticResource PrimaryButton}" 
                                Height="44" 
                                Margin="0,0,0,8"/>
                        
                        <Button Content="ðŸ—‘ï¸ Bersihkan" 
                                Style="{StaticResource SecondaryButton}" 
                                Height="40" 
                                Margin="0,0,0,8"/>
                        
                        <Button Content="ðŸšª Logout" 
                                Style="{StaticResource DangerButton}" 
                                Height="40"
                                Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
