<Window x:Class="SmartKasir.Client.Views.ReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Laporan Penjualan" Height="700" Width="1000"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Laporan Penjualan" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource ForegroundBrush}"
                   Margin="0,0,0,20"/>

        <!-- Filter Section (Requirement 9.1) -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Filter Laporan" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="{DynamicResource ForegroundBrush}"
                           Margin="0,0,0,10"/>
                
                <WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                        <TextBlock Text="Jenis Laporan:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding ReportTypes}" 
                                  SelectedItem="{Binding SelectedReportType}"
                                  Width="120"/>
                    </StackPanel>

                    <!-- Daily Report Date Picker -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,10"
                                Visibility="{Binding SelectedReportType, Converter={StaticResource DailyReportVisibilityConverter}}">
                        <TextBlock Text="Tanggal:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <DatePicker SelectedDate="{Binding SelectedDate}" Width="150"/>
                    </StackPanel>

                    <!-- Product Report Date Range -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,10"
                                Visibility="{Binding SelectedReportType, Converter={StaticResource ProductReportVisibilityConverter}}">
                        <TextBlock Text="Dari:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Width="150"/>
                        <TextBlock Text="Sampai:" 
                                   Foreground="{DynamicResource ForegroundBrush}" 
                                   VerticalAlignment="Center"
                                   Margin="20,0,10,0"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Width="150"/>
                    </StackPanel>

                    <Button Content="Tampilkan" 
                            Command="{Binding LoadReportCommand}"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Margin="0,0,0,10"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Messages -->
        <StackPanel Grid.Row="2">
            <Border Background="#1B5E20" 
                    CornerRadius="4" 
                    Padding="10"
                    Margin="0,0,0,10"
                    Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding SuccessMessage}" Foreground="White"/>
            </Border>
            <Border Background="#B71C1C" 
                    CornerRadius="4" 
                    Padding="10"
                    Margin="0,0,0,10"
                    Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding ErrorMessage}" Foreground="White"/>
            </Border>
        </StackPanel>


        <!-- Report Content -->
        <Grid Grid.Row="3">
            <!-- Daily Sales Report (Requirement 9.2) -->
            <Border Visibility="{Binding SelectedReportType, Converter={StaticResource DailyReportVisibilityConverter}}"
                    Background="{DynamicResource CardBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Ringkasan Penjualan Harian" 
                               FontSize="18" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{DynamicResource AccentBrush}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Total Transaksi" Foreground="White" FontSize="12"/>
                                <TextBlock Text="{Binding DailySalesReport.TransactionCount, FallbackValue=0}" 
                                           Foreground="White" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="#2E7D32" CornerRadius="8" Padding="15" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="Total Penjualan" Foreground="White" FontSize="12"/>
                                <TextBlock Text="{Binding DailySalesReport.TotalSales, StringFormat=Rp {0:N0}, FallbackValue=Rp 0}" 
                                           Foreground="White" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="#1565C0" CornerRadius="8" Padding="15" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Total Pajak" Foreground="White" FontSize="12"/>
                                <TextBlock Text="{Binding DailySalesReport.TotalTax, StringFormat=Rp {0:N0}, FallbackValue=Rp 0}" 
                                           Foreground="White" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <TextBlock Text="Metode Pembayaran" 
                               FontSize="14" FontWeight="SemiBold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,10"/>

                    <ItemsControl ItemsSource="{Binding DailySalesReport.PaymentMethods}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource BackgroundBrush}" 
                                        CornerRadius="4" 
                                        Padding="10" 
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Method}" 
                                                   Foreground="{DynamicResource ForegroundBrush}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Count, StringFormat={}{0} transaksi}" 
                                                   Foreground="{DynamicResource MutedForegroundBrush}"
                                                   Margin="0,0,20,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat=Rp {0:N0}}" 
                                                   Foreground="{DynamicResource ForegroundBrush}"
                                                   FontWeight="SemiBold"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Product Sales Report (Requirement 9.3) -->
            <DataGrid Visibility="{Binding SelectedReportType, Converter={StaticResource ProductReportVisibilityConverter}}"
                      ItemsSource="{Binding ProductSalesItems}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="{DynamicResource CardBackgroundBrush}"
                      Foreground="{DynamicResource ForegroundBrush}"
                      BorderBrush="{DynamicResource BorderBrush}"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nama Produk" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="Kategori" Binding="{Binding CategoryName}" Width="150"/>
                    <DataGridTextColumn Header="Qty Terjual" Binding="{Binding QuantitySold}" Width="100"/>
                    <DataGridTextColumn Header="Pendapatan" Binding="{Binding Revenue, StringFormat=Rp {0:N0}}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Export Buttons (Requirements 9.4, 9.5) -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Export PDF" 
                    Command="{Binding ExportToPdfCommand}"
                    IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBoolConverter}}"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Export Excel" 
                    Command="{Binding ExportToExcelCommand}"
                    IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBoolConverter}}"
                    Style="{DynamicResource SecondaryButtonStyle}"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Memuat..." 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White" FontSize="18"/>
        </Border>

        <!-- Exporting Overlay -->
        <Border Grid.RowSpan="5" 
                Background="#80000000" 
                Visibility="{Binding IsExporting, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Mengekspor laporan..." 
                           Foreground="White" FontSize="18"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Mohon tunggu..." 
                           Foreground="#AAAAAA" FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
