<UserControl x:Class="SmartKasir.Client.Views.ProductGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16" Background="{DynamicResource MaterialDesignCardBackground}" Padding="16">
            <TextBlock Text="Cari Produk:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchBox" Width="200" Height="40" Padding="8" Margin="0,0,8,0" materialDesign:HintAssist.Hint="Barcode atau nama"/>
            <Button Content="Cari" Width="80" Height="40" Padding="8"/>
        </StackPanel>

        <!-- Product Grid -->
        <ItemsControl Grid.Row="1" x:Name="ProductsGrid" Margin="16">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="150" Height="200" Margin="8" Background="{DynamicResource MaterialDesignCardBackground}" Padding="12">
                        <StackPanel VerticalAlignment="Stretch">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Barcode}" FontSize="10" Foreground="{DynamicResource MaterialDesignBodyLight}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Price, StringFormat='Rp {0:N0}'}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding StockQty, StringFormat='Stok: {0}'}" FontSize="12" Margin="0,0,0,8"/>
                            <Button Content="Tambah" Height="32" VerticalAlignment="Bottom" Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
