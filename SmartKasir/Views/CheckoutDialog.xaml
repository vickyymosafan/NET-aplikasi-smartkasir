<Window x:Class="SmartKasir.Client.Views.CheckoutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Checkout"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <Grid Margin="16">
        <StackPanel VerticalAlignment="Center">
            <!-- Total Amount -->
            <TextBlock Text="Total Pembayaran" FontSize="14" Margin="0,0,0,8"/>
            <TextBlock x:Name="TotalAmountText" 
                       Text="{Binding TotalAmount, StringFormat='Rp {0:N0}'}" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                       Margin="0,0,0,24"/>

            <!-- Payment Method -->
            <TextBlock Text="Metode Pembayaran" FontSize="14" Margin="0,0,0,8"/>
            <ComboBox x:Name="PaymentMethodCombo" Height="40" Margin="0,0,0,16" Padding="12,8"/>

            <!-- Amount Paid (for cash) -->
            <TextBlock Text="Nominal Pembayaran" FontSize="14" Margin="0,0,0,8"/>
            <TextBox x:Name="AmountPaidBox" 
                     Height="40" 
                     Padding="12,8" 
                     Margin="0,0,0,16"
                     materialDesign:HintAssist.Hint="Masukkan nominal"/>

            <!-- Change (for cash) -->
            <TextBlock Text="Kembalian" FontSize="14" Margin="0,0,0,8"/>
            <TextBlock x:Name="ChangeText" 
                       Text="{Binding Change, StringFormat='Rp {0:N0}'}" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Margin="0,0,0,24"/>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessageBlock"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

            <!-- Success Message -->
            <TextBlock x:Name="SuccessMessageBlock"
                       Text="{Binding SuccessMessage}"
                       Foreground="Green"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Batal" Width="100" Height="40" Margin="0,0,8,0" IsCancel="True"/>
                <Button Content="Bayar" Width="100" Height="40" Background="{DynamicResource PrimaryHueMidBrush}" Foreground="White" IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
