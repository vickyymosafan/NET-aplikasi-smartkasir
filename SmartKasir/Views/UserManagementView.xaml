<Window x:Class="SmartKasir.Client.Views.UserManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manajemen User" Height="600" Width="800"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Manajemen User" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource ForegroundBrush}"
                   Margin="0,0,0,20"/>

        <!-- Success Message -->
        <Border Grid.Row="1" 
                Background="#1B5E20" 
                CornerRadius="4" 
                Padding="10"
                Margin="0,0,0,10"
                Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <TextBlock Text="{Binding SuccessMessage}" Foreground="White"/>
        </Border>

        <!-- Toolbar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="+ Tambah User" 
                    Command="{Binding ShowCreateFormCommand}"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Edit" 
                    Command="{Binding ShowEditFormCommand}"
                    IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBoolConverter}}"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Aktif/Nonaktif" 
                    Command="{Binding ToggleUserActiveCommand}"
                    IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBoolConverter}}"
                    Style="{DynamicResource SecondaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Reset Password" 
                    Command="{Binding ShowResetPasswordCommand}"
                    IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBoolConverter}}"
                    Style="{DynamicResource DangerButtonStyle}"/>
        </StackPanel>

        <!-- User DataGrid -->
        <DataGrid Grid.Row="3" 
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Background="{DynamicResource CardBackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding IsActive}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Memuat..." 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White" FontSize="18"/>
        </Border>

        <!-- Form Popup -->
        <Border Grid.RowSpan="4" 
                Background="#80000000" 
                Visibility="{Binding ShowForm, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="20"
                    Width="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="{Binding IsEditing, Converter={StaticResource EditModeToTitleConverter}}" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Username" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FormUsername, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                    <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="Password" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
                    </StackPanel>

                    <TextBlock Text="Role" Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding UserRoles}" 
                              SelectedItem="{Binding FormRole}"
                              Margin="0,0,0,10"/>

                    <CheckBox Content="Aktif" 
                              IsChecked="{Binding FormIsActive}" 
                              Foreground="{DynamicResource ForegroundBrush}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               TextWrapping="Wrap"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Batal" 
                                Command="{Binding CancelFormCommand}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Simpan" 
                                Command="{Binding SaveUserCommand}"
                                Style="{DynamicResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Reset Password Dialog -->
        <Border Grid.RowSpan="4" 
                Background="#80000000" 
                Visibility="{Binding ShowResetPasswordDialog, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{DynamicResource CardBackgroundBrush}" 
                    CornerRadius="8" 
                    Padding="20"
                    Width="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Reset Password" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               Margin="0,0,0,15"/>

                    <TextBlock Foreground="{DynamicResource ForegroundBrush}" TextWrapping="Wrap" Margin="0,0,0,15">
                        <Run Text="Apakah Anda yakin ingin mereset password untuk user "/>
                        <Run Text="{Binding SelectedUser.Username}" FontWeight="Bold"/>
                        <Run Text="?"/>
                    </TextBlock>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               TextWrapping="Wrap"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Batal" 
                                Command="{Binding CancelResetPasswordCommand}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="Reset" 
                                Command="{Binding ConfirmResetPasswordCommand}"
                                Style="{DynamicResource DangerButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
